<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Wishlist | Forever</title>

  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<style>
  .wishlist-container {
    max-width: 1200px;
    margin: 40px auto;
    padding: 0 20px;
  }

  .wishlist-table {
    width: 100%;
    border-collapse: collapse;
    background: #fff;
    border: 1px solid #eee;
  }

  .wishlist-table th,
  .wishlist-table td {
    padding: 15px;
    text-align: center;
    border-bottom: 1px solid #eee;
    font-size: 14px;
  }

  .wishlist-table th {
    background: #f7f7f7;
    font-weight: 600;
  }

  .wishlist-table img {
    width: 70px;
    height: 80px;
    object-fit: contain;
  }


  .add-cart {
    background: #000;
    color: #fff;
    padding: 8px 14px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 13px;
  }

  .remove-btn {
    background: transparent;
    border: none;
    color: #ff3c3c;
    font-size: 16px;
    cursor: pointer;
  }

  .empty-wishlist {
    text-align: center;
    padding: 80px 0;
    color: #777;
  }
</style>

</head>

<body>
<%- include('../partials/user/header.ejs') %>
<section class="wishlist-container">

  <h2 style="margin-bottom:20px;">My Wishlist</h2>

  <% if (products.length > 0) { %>

    <table class="wishlist-table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Name</th>
          <th>Price</th>
          <th>Add to Cart</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody>

        <% products.forEach(p => { %>
          <tr>
            <td>
              <img src="/uploads/image/<%= p.productImage[0] %>" alt="">
            </td>

            <td><%= p.productName %></td>

            <td>â‚¹ <%= p.finalPrice %></td>

            <td>
              <button class="add-cart"
                      onclick="addToCart('<%= p._id %>')">
                Add to Cart
              </button>
            </td>

            <td>
              <button class="remove-btn"
                      onclick="removeWishlist('<%= p._id %>')">
                <i class="fa-solid fa-trash"></i>
              </button>
            </td>
          </tr>
        <% }) %>

      </tbody>
    </table>

  <% } else { %>

    <div class="empty-wishlist">
      <h3>Your wishlist is empty</h3>
    </div>

  <% } %>

</section>


<%- include('../partials/user/footer.ejs') %>

<script>
  async function removeWishlist(productId) {
    const res = await fetch("/wishlist/remove", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ productId })
    });

    const data = await res.json();
    if (data.success) location.reload();
  }

  async function addToCart(productId) {
    const res = await fetch("/cart/add", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ productId, quantity: 1 })
    });

    const data = await res.json();
    if (data.success) {
      //alert("Added to cart");
      
  await removeWishlist(productId);
      location.reload();
    } else {
      alert(data.message || "Unable to add");
    }
  }
</script>

</body>
</html>
