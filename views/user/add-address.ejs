
<title>Home | Add Address</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/add-address.css">


 <%- include('../partials/user/header.ejs') %>


<section class="profile-container">
  <div class="profile-grid">

    <!-- LEFT SIDEBAR -->
    <aside class="profile-sidebar">
      <div class="profile-card">
        <img src="/uploads/profile/<%= user.profileImage %>"  alt="User" class="profile-avatar">
        <h3><%= user.name%></h3>
        <p><%= user.email%></p>
      </div>

      <ul class="profile-menu">
        <li ><a href="/user-profile">Profile</a></li>
        <li><a href="/cart">Cart</a></li>
        <li><a href="/orders">Orders</a></li>
        <li class="active"><a href="/address">Addresses</a></li>
        <li><a href="/wallet">Wallet</a></li>
        <li><a href="/edit-profile">Edit Profile</a></li>
        <li><a href="/change-password">Change Password</a></li>
        <li><a href="/change-email">Change Email</a></li>
        <li class="danger"><a href="/logout">Logout</a></li>
      </ul>
    </aside>

    <!-- MAIN CONTENT -->
   <section class="profile-content">

      <div class="profile-box">
        <h2>Add New Address</h2>

        <form class="form-box" id="addressForm">

  <div class="form-group">
    <label>Address Type</label>
    <input name="addressType">
    <small id="error-addressType" class="error1"></small>
  </div>

  <div class="form-group">
    <label>Full Name</label>
    <input name="name">
    <small id="error-name" class="error1"></small>
  </div>

  <div class="form-group">
    <label>House Name</label>
    <input name="houseName">
    <small id="error-houseName" class="error1"></small>
  </div>

  <div class="form-group">
    <label>Place</label>
    <input name="place">
    <small id="error-place" class="error1"></small>
  </div>

  <div class="form-group">
    <label>City</label>
    <input name="city">
    <small id="error-city" class="error1"></small>
  </div>

  <div class="form-group">
    <label>District</label>
    <input name="district">
    <small id="error-district" class="error1"></small>
  </div>

  <div class="form-group">
    <label>State</label>
    <input name="state">
    <small id="error-state" class="error1"></small>
  </div>

  <div class="form-group">
    <label>Pincode</label>
    <input name="pincode">
    <small id="error-pincode" class="error1"></small>
  </div>

  <div class="form-group">
    <label>Phone</label>
    <input name="phone">
    <small id="error-phone" class="error1"></small>
  </div>

  <div class="form-group">
    <label>Alternate Phone</label>
    <input name="altPhone">
    <small id="error-altPhone" class="error1"></small>
  </div>

  <button class="btn-primary">Save Address</button>
</form>

      </div>

    </section>

</div>
</section>


 <%- include('../partials/user/footer.ejs') %>

<script src="/js/add-address.js"></script>