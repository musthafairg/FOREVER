
<title>Home | Add Address</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/css/style.css">
<style>
    .profile-container {
  max-width: 1200px;
  margin: 40px auto;
  padding: 0 20px;
}

.profile-grid {
  display: grid;
  grid-template-columns: 280px 1fr;
  gap: 30px;
}

.profile-sidebar {
  background: #fff;
  border: 1px solid #eee;
  border-radius: 10px;
}

.profile-card {
  padding: 25px;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.profile-avatar {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  object-fit: cover;
  margin-bottom: 10px;
  margin-left: 29%;
}

.profile-menu {
  list-style: none;
  padding: 0;
  margin: 0;
}

.profile-menu li {
  padding: 14px 20px;
  cursor: pointer;
  border-bottom: 1px solid #f1f1f1;
  font-weight: 500;
}

.profile-menu li.active {
  background: #f9f9f9;
  color: #ff3c3c;
}

.profile-menu li.danger {
  color: #ff3c3c;
}

.profile-content {
  display: flex;
  flex-direction: column;
  gap: 25px;
  margin: -20px;
}

.profile-box {
  background: #fff;
  border-radius: 10px;
  padding: 25px;
  border: 1px solid #eee;
}

.profile-box h2 {
  margin-bottom: 20px;
  font-size: 20px;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
}

.info-grid label {
  font-size: 13px;
  color: #888;
}

.form-box {
  max-width: 800px;
  margin: 20px;
}

.form-group {
  margin-bottom: 18px;
}

.form-group label {
  display: block;
  font-size: 14px;
  margin-bottom: 6px;
}

.form-group input {
  width: 100%;
  padding: 10px;
  border-radius: 6px;
  border: 1px solid #ddd;
}

.form-group small {
  font-size: 12px;
  color: #999;
}

.btn-primary {
  background: #ff3c3c;
  color: #fff;
  margin-top: 20px;
  padding: 12px;
  width: 100%;
  border-radius: 6px;
  border: none;
  cursor: pointer;
}
.error {
  color: red;
  font-size: 12px;
  margin-top: 4px;
  display: block;
}

</style>

 <%- include('../partials/user/header.ejs') %>


<section class="profile-container">
  <div class="profile-grid">

    <!-- LEFT SIDEBAR -->
    <aside class="profile-sidebar">
      <div class="profile-card">
        <img src="/uploads/profile/<%= user.profileImage %>"  alt="User" class="profile-avatar">
        <h3><%= user.name%></h3>
        <p><%= user.email%></p>
      </div>

      <ul class="profile-menu">
        <li ><a href="/user-profile">Profile</a></li>
        <li><a href="/cart">Cart</a></li>
        <li><a href="/orders">Orders</a></li>
        <li class="active"><a href="/address">Addresses</a></li>
        <li><a href="/edit-profile">Edit Profile</a></li>
        <li><a href="/change-password">Change Password</a></li>
        <li><a href="/change-email">Change Email</a></li>
        <li class="danger"><a href="/logout">Logout</a></li>
      </ul>
    </aside>

    <!-- MAIN CONTENT -->
   <section class="profile-content">

      <div class="profile-box">
        <h2>Add New Address</h2>

        <form class="form-box" id="addressForm">

  <div class="form-group">
    <label>Address Type</label>
    <input name="addressType">
    <small id="error-addressType" class="error"></small>
  </div>

  <div class="form-group">
    <label>Full Name</label>
    <input name="name">
    <small id="error-name" class="error"></small>
  </div>

  <div class="form-group">
    <label>House Name</label>
    <input name="houseName">
    <small id="error-houseName" class="error"></small>
  </div>

  <div class="form-group">
    <label>Place</label>
    <input name="place">
    <small id="error-place" class="error"></small>
  </div>

  <div class="form-group">
    <label>City</label>
    <input name="city">
    <small id="error-city" class="error"></small>
  </div>

  <div class="form-group">
    <label>District</label>
    <input name="district">
    <small id="error-district" class="error"></small>
  </div>

  <div class="form-group">
    <label>State</label>
    <input name="state">
    <small id="error-state" class="error"></small>
  </div>

  <div class="form-group">
    <label>Pincode</label>
    <input name="pincode">
    <small id="error-pincode" class="error"></small>
  </div>

  <div class="form-group">
    <label>Phone</label>
    <input name="phone">
    <small id="error-phone" class="error"></small>
  </div>

  <div class="form-group">
    <label>Alternate Phone</label>
    <input name="altPhone">
    <small id="error-altPhone" class="error"></small>
  </div>

  <button class="btn-primary">Save Address</button>
</form>

      </div>

    </section>

</div>
</section>


 <%- include('../partials/user/footer.ejs') %>

<script>
const form = document.getElementById("addressForm");

form.addEventListener("submit", async (e) => {
  e.preventDefault();


  document.querySelectorAll(".error").forEach(el => el.innerText = "");

  const formData = new FormData(form);
  const payload = Object.fromEntries(formData.entries());


    const res = await fetch("/address/add", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload)
    });

    const response = await res.json();

    if (!response.success) {
      for (const field in response.errors) {
        const errorEl = document.getElementById(`error-${field}`);
        if (errorEl) {
          errorEl.innerText = response.errors[field];
        }
      }
      return;
    }

  
    window.location.href = "/address";

  
});
</script>
