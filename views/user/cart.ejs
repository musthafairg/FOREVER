<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>My Cart | Forever</title>

<link
  href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap"
  rel="stylesheet"
/>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
/>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/cart.css">

  
</head>

<body>
<%- include('../partials/user/header.ejs') %>




<section class="cart-container">

  <div class="cart-grid">

    <!-- CART ITEMS -->
    <div class="cart-box">
      <h2 class="cart-title">My Cart</h2>

      <% if (cart && cart.items.length > 0) { %>

        <% cart.items.forEach(item => { %>
  <div class="cart-item <%= item.isBlocked || item.stockIssue ? 'invalid-item' : '' %>">

    <img src="/uploads/image/<%= item.productId.productImage[0] || 'placeholder.png' %>">

    <div>
      <h4><%= item.productId.productName %></h4>
      <h5>Size: <%= item.size %></h5>

      <% if(item.isBlocked){ %>
        <p class="error-text">This product is no longer available</p>
      <% } %>

      <% if(item.stockIssue){ %>
        <p class="error-text">Insufficient stock available</p>
      <% } %>

      <% if(!item.isBlocked && !item.stockIssue){ %>
        <div class="cart-price">₹ <%= item.finalPrice %></div>
      <% } %>
    </div>

    <% if(!item.isBlocked && !item.stockIssue){ %>
      <div class="qty-box">
        <button onclick="updateQty('<%= item.productId._id %>','<%= item.size %>','dec')">
          <i class="fa-solid fa-minus"></i>
        </button>

        <span><%= item.quantity %></span>

        <button onclick="updateQty('<%= item.productId._id %>','<%= item.size %>','inc')">
          <i class="fa-solid fa-plus"></i>
        </button>
      </div>
    <% } %>

    <div class="remove-btn"
         onclick="removeItem('<%= item.productId._id %>','<%= item.size %>')">
      Remove
    </div>

  </div>
<% }) %>


      <% } else { %>
        <div class="empty-cart">
          <h3>Your cart is empty</h3>
        </div>
      <% } %>

    </div>

    <!-- SUMMARY -->
    <div class="cart-box">
      <h2 class="cart-title">Summary</h2>

      <div class="summary-row">
        <span>Subtotal</span>
        <span>₹ <%= subtotal %></span>
      </div>

      <div class="summary-row">
        <span>Shipping</span>
        <span>Free</span>
      </div>

      <hr>

      <div class="summary-row summary-total">
        <span>Total</span>
        <span>₹ <%= subtotal %></span>
      </div>

      <button
  class="checkout-btn"
  <%= hasInvalidItems ? 'disabled' : '' %>
  onclick="location.href='/checkout'">
  Proceed to Checkout
</button>

<% if(hasInvalidItems){ %>
  <p class="error-text">
    Please remove unavailable items before checkout.
  </p>
<% } %>

    </div>

  </div>

</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<%- include('../partials/user/footer.ejs') %>


<script src="/js/cart.js"></script>
</body>
</html>
