<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Orders | Forever</title>
  <link rel="stylesheet" href="/css/style.css">

  <style>
    .orders-wrapper {
      max-width: 1100px;
  
      padding: 0 20px;
    }

    .orders-title {
      font-size: 22px;
      font-weight: 600;
      margin-bottom: 20px;
    }

    .orders-table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      border-radius: 10px;
      overflow: hidden;
      border: 1px solid #eee;
    }

    .orders-table thead {
      background: #f8f8f8;
    }

    .orders-table th,
    .orders-table td {
      padding: 14px 16px;
      font-size: 14px;
      text-align: left;
      border-bottom: 1px solid #eee;
      vertical-align: middle;
    }

    .orders-table th {
      font-weight: 600;
      color: #333;
    }

    .orders-table tbody tr:hover {
      background: #fafafa;
    }

    .status {
      padding: 4px 10px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 500;
      display: inline-block;
    }

    .status.placed {
      background: #e6f4ea;
      color: #137333;
    }

    .status.shipped {
      background: #e8f0fe;
      color: #1a73e8;
    }

    .status.delivered {
      background: #e0f2f1;
      color: #00796b;
    }

    .status.cancelled {
      background: #fdecea;
      color: #d93025;
    }
     .status.returned {
      background: #fdecea;
      color: #1f0301;
    }

    .view-btn {
      padding: 6px 14px;
      border-radius: 6px;
      background: #ff5a5a;
      color: #fff;
      font-size: 13px;
      text-decoration: none;
      display: inline-block;
    }

    .view-btn:hover {
      background: #e64949;
    }

    .empty-orders {
      background: #fff;
      padding: 60px;
      text-align: center;
      border-radius: 10px;
      border: 1px solid #eee;
      color: #777;
    }

    @media (max-width: 768px) {
      .orders-table {
        font-size: 13px;
      }

      .orders-table th,
      .orders-table td {
        padding: 10px;
      }
    }
        .profile-container {
  max-width: 1200px;
  margin: 40px auto;
  padding: 0 20px;
}

.profile-grid {
  display: grid;
  grid-template-columns: 280px 1fr;
  gap: 30px;
}

.profile-sidebar {
  background: #fff;
  border: 1px solid #eee;
  border-radius: 10px;
}

.profile-card {
  padding: 25px;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.profile-avatar {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  object-fit: cover;
  margin-bottom: 10px;
  margin-left: 29%;
}

.profile-menu {
  list-style: none;
  padding: 0;
  margin: 0;
}

.profile-menu li {
  padding: 14px 20px;
  cursor: pointer;
  border-bottom: 1px solid #f1f1f1;
  font-weight: 500;
}

.profile-menu li.active {
  background: #f9f9f9;
  color: #ff3c3c;
}

.profile-menu li.danger {
  color: #ff3c3c;
}

.profile-content {
  display: flex;
  flex-direction: column;
  gap: 25px;
}

.profile-box {
  background: #fff;
  border-radius: 10px;
  padding: 25px;
  border: 1px solid #eee;
}

.profile-box h2 {
  margin-bottom: 20px;
  font-size: 20px;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px;
}

.info-grid label {
  font-size: 13px;
  color: #888;
}

.form-box {
  max-width: 500px;
  margin: auto;
}

.form-group {
  margin-bottom: 18px;
}

.form-group label {
  display: block;
  font-size: 14px;
  margin-bottom: 6px;
}

.form-group input {
  width: 100%;
  padding: 10px;
  border-radius: 6px;
  border: 1px solid #ddd;
}

.form-group small {
  font-size: 12px;
  color: #999;
}

.btn-primary {
  background: #ff3c3c;
  color: #fff;
  padding: 12px;
  width: 100%;
  border-radius: 6px;
  border: none;
  cursor: pointer;
}
  </style>
</head>

<body>

<%- include('../partials/user/header.ejs') %>

<section class="profile-container">
  <div class="profile-grid">

    <!-- LEFT SIDEBAR -->
    <aside class="profile-sidebar">
      <div class="profile-card">
        <img src="/uploads/profile/<%= user.profileImage %>"  alt="User" class="profile-avatar">
        <h3><%= user.name%></h3>
        <p><%= user.email%></p>
      </div>

      <ul class="profile-menu">
        <li class="active"><a href="/user-profile">Profile</a></li>
        <li><a href="/cart">Cart</a></li>
        <li><a href="/orders">Orders</a></li>
        <li><a href="/address">Addresses</a></li>
        <li><a href="/edit-profile">Edit Profile</a></li>
        <li><a href="/change-password">Change Password</a></li>
        <li><a href="/change-email">Change Email</a></li>
        <li class="danger"><a href="/logout">Logout</a></li>
      </ul>
    </aside>

<section class="orders-wrapper">

  <h2 class="orders-title">My Orders</h2>

  <% if (orders.length === 0) { %>
    <div class="empty-orders">
      <h3>No orders found</h3>
      <p>Looks like you haven’t placed any orders yet.</p>
    </div>
  <% } else { %>

  <table class="orders-table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Status</th>
        <th>Total</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><strong><%= order.orderId %></strong></td>

          <td>
            <%= order.createdAt.toDateString() %>
          </td>

          <td>
            <span class="status <%= order.orderStatus.toLowerCase() %>">
              <%= order.orderStatus %>
            </span>
          </td>

          <td>₹ <%= order.priceDetails.total %></td>

          <td>
            <a href="/orders/<%= order.orderId %>" class="view-btn">
              View Details
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% } %>

</section>

  </div>
</section>

<%- include('../partials/user/footer.ejs') %>

</body>
</html>
