<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout | Forever</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    
    .checkout-container {
  max-width: 1200px;
  margin: 40px auto;
  padding: 0 20px;
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 30px;
}

.checkout-box {
  background: #fff;
  border: 1px solid #eee;
  border-radius: 10px;
  padding: 25px;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 20px;
}

.address-card {
  display: flex;
  gap: 15px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
  cursor: pointer;
}

.address-card input {
  margin-top: 5px;
}

.address-content {
  flex: 1;
}

.address-type {
  display: inline-block;
  background: #f1f1f1;
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 4px;
  margin-bottom: 6px;
}

.addr-name {
  font-weight: 600;
  margin-bottom: 5px;
}

.addr-phone {
  font-size: 13px;
  color: #555;
}

.summary-box .summary-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12px;
}

.summary-box .total {
  font-weight: 600;
  font-size: 18px;
}

.place-order-btn {
  width: 100%;
  margin-top: 20px;
  padding: 14px;
  background: #ff3c3c;
  color: #fff;
  border: none;
  border-radius: 6px;
  cursor: pointer;
}

  </style>
</head>

<body>
<%- include('../partials/user/header.ejs') %>

<section class="checkout-container">

  <!-- ADDRESS SELECTION -->
  <div class="checkout-box">
    <h3 class="section-title">Select Delivery Address</h3>

    <% if (addresses.length > 0) { %>
      <% addresses.forEach((addr, index) => { %>
        <label class="address-card">
          <input
            type="radio"
            name="address"
            value="<%= index %>"
            <%= addr.isDefault ? "checked" : "" %>
          >

           <div class="address-content">

           <span class="address-type">
              <%= addr.addressType %>
            </span>

            <p class="addr-name"><%= addr.name %></p>

            <p>
              <%= addr.houseName %>, <%= addr.place %><br>
              <%= addr.city %>, <%= addr.district %><br>
              <%= addr.state %> - <%= addr.pincode %>
            </p>

            <p class="addr-phone">
              Phone: <%= addr.phone %>
            </p>

          </div>
        </label>

      <% }) %>

    <% } else { %>
      <p>No address found. Please add one.</p>
    <% } %>

  </div>

  <!-- ORDER SUMMARY -->
   <div class="checkout-box summary-box">
    <h3 class="section-title">Order Summary</h3>

    <% cart.items.forEach(item => { %>
      <div class="summary-row">
        <span><%= item.productId.productName %> × <%= item.quantity %></span>
        <span>₹ <%= item.productId.salePrice * item.quantity %></span>
      </div>
    <% }) %>

    <hr>

    <div class="summary-row total">
      <span>Total</span>
      <span>₹ <%=subtotal %></span>
    </div>

    <button class="place-order-btn">
      Place Order
    </button>
  </div>



</section>

<%- include('../partials/user/footer.ejs') %>
</body>
</html>
