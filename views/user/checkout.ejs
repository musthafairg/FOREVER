<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Checkout | Forever</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">

  <style>
    body { font-family: 'Poppins', sans-serif; background: #fafafa; }

    .checkout-container {
      max-width: 1200px;
      margin: 40px auto;
      display: grid;
      grid-template-columns: 2.3fr 1fr;
      gap: 30px;
      padding: 0 20px;
    }

    .checkout-card {
      background: #fff;
      border-radius: 12px;
      padding: 25px;
      border: 1px solid #eee;
    }

    h2 { font-size: 18px; font-weight: 600; margin-bottom: 15px; }

    .address-card {
      display: flex;
      gap: 12px;
      padding: 14px;
      border: 1px solid #ddd;
      border-radius: 8px;
      margin-bottom: 10px;
      cursor: pointer;
    }

    .address-card:hover { border-color: #000; }

    .order-item {
      display: flex;
      gap: 15px;
      padding: 15px 0;
      border-bottom: 1px solid #eee;
    }

    .order-item img { width: 70px; border-radius: 6px; }

    .summary-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 12px;
      font-size: 14px;
    }

    .summary-row.total {
      font-size: 16px;
      font-weight: 600;
      margin-top: 15px;
    }

    .place-order-btn {
      width: 100%;
      padding: 14px;
      background: #ff3c3c;
      border: none;
      color: #fff;
      border-radius: 6px;
      font-size: 15px;
      cursor: pointer;
      margin-top: 20px;
    }

    @media (max-width: 768px) {
      .checkout-container { grid-template-columns: 1fr; }
    }
  </style>
</head>

<body>
<%- include('../partials/user/header.ejs') %>

<section class="checkout-container">

  <!-- LEFT -->
  <div class="checkout-card">
    <h2>Select Delivery Address</h2>

    <form id="checkoutForm">

      <% addresses.forEach(addr => { %>
        <label class="address-card">
          <input type="radio" name="addressId"
                 value="<%= addr._id %>"
                 <%= addr.isDefault ? "checked" : "" %> required>

          <div>
            <strong><%= addr.addressType %></strong><br>
            <%= addr.name %>, <%= addr.houseName %><br>
            <%= addr.place %>, <%= addr.district %><br>
            <%= addr.state %> - <%= addr.pincode %><br>
            Phone: <%= addr.phone %>
          </div>
        </label>
      <% }) %>

      <a href="/address" style="display:block;margin-top:10px;">+ Add New Address</a>

      <h2 style="margin-top:30px;">Order Items</h2>

      <% cart.items.forEach(item => { %>
        <div class="order-item">
          <img src="/uploads/image/<%= item.productId.productImage[0] %>">
          <div>
            <strong><%= item.productId.productName %></strong><br>
            Qty: <%= item.quantity %><br>
            ₹ <%= item.productId.salePrice * item.quantity %>
          </div>
        </div>
      <% }) %>

  </div>

  <!-- RIGHT -->
  <div class="checkout-card">
    <h2>Price Summary</h2>

    <div class="summary-row">
      <span>Subtotal</span>
      <span>₹ <%= subtotal %></span>
    </div>

    <div class="summary-row">
      <span>Tax (5%)</span>
      <span>₹ <%= tax %></span>
    </div>

    <div class="summary-row">
      <span>Shipping</span>
      <span>Free</span>
    </div>

    <% if (discount > 0) { %>
      <div class="summary-row">
        <span>Discount</span>
        <span>- ₹ <%= discount %></span>
      </div>
    <% } %>

    <div class="summary-row total">
      <span>Total</span>
      <span>₹ <%= total %></span>
    </div>

    <button type="submit" class="place-order-btn">
      Place Order (Cash on Delivery)
    </button>

    </form>
  </div>

</section>

<%- include('../partials/user/footer.ejs') %>

<script>
document.getElementById("checkoutForm").addEventListener("submit", async (e) => {
  e.preventDefault();

  const formData = new FormData(e.target);

  const res = await fetch("/checkout/place-order", {
    method: "POST",
    headers: { "Content-Type": "application/x-www-form-urlencoded" },
    body: new URLSearchParams(formData)
  });

  const data = await res.json();

  if (data.success) {
    window.location.href = "/order-success";
  } else {
    alert(data.message || "Order failed");
  }
});
</script>

</body>
</html>
