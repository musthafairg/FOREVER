  <main class="dashboard-content">

    <div class="content-header mb-4">
      <h2>Coupon Management</h2>
    </div>

<div class="card p-3 mb-4">
  <form id="couponForm" class="row g-2">
    <div class="col-md-3">
      <input name="code" class="form-control" placeholder="COUPON CODE">
      <small class="text-danger" id="error-code"></small>
    </div>

    <div class="col-md-2">
      <select name="discountType" class="form-select">
        <option value="PERCENT">Percentage</option>
        <option value="FLAT">Flat</option>
      </select>
    </div>

    <div class="col-md-2">
      <input type="number" name="discountValue" class="form-control" placeholder="Discount">
      <small class="text-danger" id="error-discountValue"></small>
    </div>

    <div class="col-md-2">
      <input type="number" name="minPurchase" class="form-control" placeholder="Min Purchase">
    </div>

    <div class="col-md-2">
      <input type="date" name="expiryDate" class="form-control">
      <small class="text-danger" id="error-expiryDate"></small>
    </div>

    <div class="col-md-1">
      <button class="btn btn-dark w-100">Add</button>
    </div>
  </form>
</div>


<div class="table-container bg-white p-3 rounded shadow-sm">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Code</th>
        <th>Discount</th>
        <th>Expiry</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody id="couponTable">
      <% coupons.forEach(c => { %>
        <tr id="row-<%= c._id %>">
          <td><strong><%= c.code %></strong></td>
          <td>
            <%= c.discountType === "PERCENT" ? c.discountValue + "%" : "â‚¹" + c.discountValue %>
          </td>
          <td><%= c.expiryDate.toDateString() %></td>
          <td>
            <span id="status-<%= c._id %>" class="badge <%= c.isActive ? 'bg-success' : 'bg-secondary' %>">
              <%= c.isActive ? 'Active' : 'Disabled' %>
            </span>
          </td>
          <td>
            <button class="btn btn-sm btn-outline-dark"
              onclick="toggleCoupon('<%= c._id %>')">Toggle</button>
            <button class="btn btn-sm btn-outline-danger"
              onclick="deleteCoupon('<%= c._id %>')">Delete</button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>


  </main>
</div>

