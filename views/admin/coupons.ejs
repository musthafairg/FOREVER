  <main class="dashboard-content">
    <h2 class="mb-4">Coupon Management</h2>

    <!-- ADD COUPON -->
    <div class="card p-3 mb-4">
      <form id="couponForm" class="row g-2">
        <div class="col-md-3">
          <input name="code" class="form-control" placeholder="COUPON CODE" />
          <small id="error-code" class="text-danger"></small>
        </div>

        <div class="col-md-2">
          <select id="discountType" name="discountType" class="form-select">
            <option value="PERCENT">Percentage</option>
            <option value="FLAT">Flat</option>
          </select>
        </div>

        <div class="col-md-2">
          <input
            name="discountValue"
            type="number"
            class="form-control"
            placeholder="Discount"
          />
          <small id="error-discountValue" class="text-danger"></small>
        </div>

        <div class="col-md-2">
          <input
            name="minPurchase"
            type="number"
            class="form-control"
            placeholder="Min Purchase"
          />
        </div>

       

        <div class="col-md-2">
          <input type="number",
          name="maxPurchase",
          class="form-control",
          placeholder="Max Purchase"
          />
          <small id="error-maxPurchase" class="text-danger"></small>

        </div>
      

        <div class="col-md-2">
          <input name="expiryDate" type="date" class="form-control" />
          <small id="error-expiryDate" class="text-danger"></small>
        </div>

        <div class="col-md-1">
          <button class="btn btn-dark w-100">Add</button>
        </div>
      </form>
    </div>

    <!-- TABLE -->
    <table class="table table-striped bg-white shadow-sm">
      <thead>
        <tr>
          <th>Code</th>
          <th>Discount</th>
          <th>Expiry</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% coupons.forEach(c => { %>
        <tr id="row-<%= c._id %>">
          <td><strong><%= c.code %></strong></td>
          <td>
            <%= c.discountType === "PERCENT" ? c.discountValue + "%" : "â‚¹" +
            c.discountValue %>
          </td>
          <td><%= c.expiryDate.toDateString() %></td>
          <td>
            <span
              id="status-<%= c._id %>"
              class="badge <%= c.isActive ? 'bg-success' : 'bg-secondary' %>"
            >
              <%= c.isActive ? "Active" : "Disabled" %>
            </span>
          </td>
          <td>
            <button
              class="btn btn-sm btn-outline-primary"
              onclick="openEditModal('<%= c._id %>')"
            >
              Edit
            </button>
            <button
              class="btn btn-sm btn-outline-dark"
              onclick="toggleCoupon('<%= c._id %>')"
            >
              Toggle
            </button>
            <button
              class="btn btn-sm btn-outline-danger"
              onclick="deleteCoupon('<%= c._id %>')"
            >
              Delete
            </button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
</div>

<!-- EDIT MODAL -->
<div class="modal fade" id="editCouponModal">
  <div class="modal-dialog">
    <form id="editCouponForm" class="modal-content">
      <div class="modal-header">
        <h5>Edit Coupon</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
      </div>

      <div class="modal-body">
        <input type="hidden" id="edit-id" name="id" />

        <input id="edit-code" name="code" class="form-control mb-2" />
        <small id="edit-error-code" class="text-danger"></small>

        <select
          id="edit-discountType"
          name="discountType"
          class="form-select mb-2"
        >
          <option value="PERCENT">Percentage</option>
          <option value="FLAT">Flat</option>
        </select>

        <input
          id="edit-discountValue"
          name="discountValue"
          type="number"
          class="form-control mb-2"
        />
        <small id="edit-error-discountValue" class="text-danger"></small>

        <input
          id="edit-minPurchase"
          name="minPurchase"
          type="number"
          class="form-control mb-2"
        />

        <div class="col-md-2">
  <input
    name="maxDiscount"
    type="number"
    class="form-control"
    placeholder="Max Discount (for %)"
  />
  <small id="error-maxDiscount" class="text-danger"></small>
</div>

        <input
          id="edit-expiryDate"
          name="expiryDate"
          type="date"
          class="form-control"
        />
        <small id="edit-error-expiryDate" class="text-danger"></small>
      </div>

      <div class="modal-footer">
        <button class="btn btn-dark">Update</button>
      </div>
    </form>
  </div>
</div>

