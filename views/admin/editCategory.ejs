                    <h2 class="content-title card-title">Edit Category</h2>
                </div>
            </div> 
            
             <div class="card card-form">
                    <div class="card-body">
                        <h4 class="card-title"></h4>
                        <form id="editCategoryForm">
                            <div class="mb-4">
                                <label for="category_name" class="form-label">Name</label>
                                <input 
                                    type="text" 
                                    name="name" 
                                    placeholder="Type category name" 
                                    class="form-control" 
                                    id="category_name" 
                                    value="<%=category.name%>"
                                    required
                                />
                                <div id="name_error" class="error-message"></div>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Description</label>
                                <textarea 
                                    placeholder="Type category description" 
                                    name="description" 
                                    class="form-control" 
                                    id="descriptionId" 
                                    
                                    required
                                ><%=category.description%></textarea>
                                <div id="description_error" class="error-message"></div>
                            </div>

                           
                            
                            <div class="d-grid">
